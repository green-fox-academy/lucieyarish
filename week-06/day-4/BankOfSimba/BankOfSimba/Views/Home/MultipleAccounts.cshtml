@using BankOfSimba.ViewModels
@using Microsoft.AspNetCore.Mvc.Razor
@model BankOfSimba.ViewModels.MultipleAccounts
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
    }
    
    table, th, td {
        border: 3px solid #696969;
        border-collapse: collapse;
    }
    
    th {
        text-align: left;
    }
    
    th, td {
        padding: 6px;
    }
    
    th {
        text-align: left;
        background-color: black;
        color: white;
    }
    
    tr:nth-child(even) {
        background-color: lightgrey;
    }
    
    tr:nth-child(odd) {
        background-color: white;
    } 
    
    .king {
        background-color: palegoldenrod;
    }
    
    .good-guys {
        background-color: darkseagreen;
    }
    
    .bad-guys {
        background-color: indianred;
    }
   
</style>
<body>
    <h2>Animals' Accounts</h2>
<table>
    <tr>
        <th>Account ID:</th>
        <th>Account Name:</th>
        <th>Balance:</th>
        <th>Animal Type:</th>
        <th>Is King:</th>
        <th>Is Good:</th>
        <th>Increase Balance:</th>
    </tr>
    @for (int i = 0; i < @Model.multipleAccounts.Count; i++)
    {
        <tr>
            <td>@i</td>
            <td>@Model.multipleAccounts[i].Name</td>
            <td>@Model.multipleAccounts[i].Balance</td>
            <td>@Model.multipleAccounts[i].AnimalType</td>
            @if (@Model.multipleAccounts[i].IsKing == true)
            {
                <td class="king">King</td>
            }
            else
            {
                <td>Not a king</td>
            }
            @if (@Model.multipleAccounts[i].IsGood == true)
            {
                <td class="good-guys">Good One</td>
            }
            else
            {
                <td class="bad-guys">Bad Guy</td>
            }
            @* <td> *@
            @*     <form action="increaseBalance" method="post"> *@
            @*         <input type="hidden" name="accountID" value="[i]"/> *@
            @*         <button class="increase">Increase Balance</button> *@
            @*     </form> *@
            @* </td> *@
        </tr>
    }
</table>
</body>
</html>