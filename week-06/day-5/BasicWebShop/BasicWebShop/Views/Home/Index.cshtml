@model BasicWebShop.ViewModels.ShopItems
@using BasicWebShop.ViewModels
@using Microsoft.AspNetCore.Mvc.Razor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Lucie's Web Shop</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
<header>
    <a href="/home"><h1>Lucie's Web Shop</h1></a>
    <hr>
    <nav class="navbar-buttons">
        <ul>
            <li>
                <form action="only-available" method="get">
                    <button class="buttons-filtering">ONLY AVAILABLE</button>
                </form>
            </li>
            <li>
                <form action="cheapest-first">
                    <button class="buttons-filtering">CHEAPEST FIRST</button>
                </form>
            </li>
            <li>
                <form action="contains-corgi">
                    <button class="buttons-filtering">CONTAINS CORGI</button>
                </form>
            </li>
            <li>
                <form action="average-stock">
                    <button class="buttons-filtering">AVERAGE STOCK</button>
                </form>
            </li>
            <li>
                <form action="most-expensive-available">
                    <button class="buttons-filtering">MOST EXPENSIVE AVAILABLE</button>
                </form>
            </li>
        </ul>
    </nav>
</header>

<div class="table-container">
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        @for (int i = 0; i < @Model.allItems.Count; i++)
        {
            <tr>
                <td>@Model.allItems[i].Name</td>
                <td>@Model.allItems[i].Description</td>
                <td>&dollar;@Model.allItems[i].Price</td>
                <td>@Model.allItems[i].Quantity</td>
            </tr>
        }
    </table>
</div>


</body>

</html>
