@model ListingTodos.Models.AssigneeViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Add New Assignee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<h1>Add new assignee:</h1>

@using (Html.BeginForm("AddAssignee", "Assignee", FormMethod.Post))
{
    @Html.LabelFor(model => model.Assignee.Name);<br/>
    @Html.TextBoxFor(model => model.Assignee.Name);<br/>
    @Html.LabelFor(model => model.Assignee.Email);<br/>
    @Html.TextBoxFor(model => model.Assignee.Email);<br/>

    <button type="submit">Submit</button>
}

@Html.ActionLink("Back to all assignees", "ListAll", "Assignee")
@Html.ActionLink("Back to all todos", "ListAll", "Todo")
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>