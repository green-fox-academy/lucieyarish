@model ListingTodos.Models.AssigneeViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Assignees</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
@Html.ActionLink("View all assignees", "ListAll", "Assignee")<br/>
@Html.ActionLink("Add new assignee", "AddAssignee", "Assignee")
<h1>List of Assignees:</h1>
<p>Search Todo:</p>
<form method="get" action="search">
    <input type="text" id="assignee" name="assignee" placeholder="Search assignee...">
    <input type="submit" value="Search">
</form>

<table>
    <tr>
        <th>ID:</th>
        <th>Name:</th>
        <th>Email:</th>
    </tr>

    @foreach (var person in @Model.Assignees)
    {
        <tr>
            <td>@person.Id</td>
            <td><a href="@person.Id/details">@person.Name</a></td>
            <td>@person.Email</td>
            <td><a href="@person.Id/delete">Delete</a></td>
            <td><a href="@person.Id/edit">Edit</a></td>
        </tr>
    }
</table>

@Html.ActionLink("Back to all todos", "ListAll", "Todo")
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>