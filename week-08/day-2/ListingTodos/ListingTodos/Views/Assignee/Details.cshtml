@model ListingTodos.Models.AssigneeViewModel

<html>
<head>
    <title>Assignee Details</title>
</head>
<body>
@if (Model.Assignee.AssignedTodos.Count == 0)
{
    <p>No todos assigned!</p>
}
else
{
    <ul>
        @foreach (var todo in Model.Assignee.AssignedTodos)
        {
            
                <li>@todo.Title @todo.Description</li>
        }
    </ul>
}
</body>
</html>