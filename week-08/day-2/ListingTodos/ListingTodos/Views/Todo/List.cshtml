@model ListingTodos.Models.TodoViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-4 col-md-4">
            <a href="list">View all</a><br/>
        </div>
        <div class="col-12 col-sm-4 col-md-4">
            <a href="add">Add new todo</a><br/>
        </div>
        <div class="col-12 col-sm-4 col-md-4">
            <a href="active">View active todos only</a>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <h1>Todos for today:</h1>
        
            <p>Search Todo:</p>
            <form method="get" action="search">
                <input type="text" id="todo" name="todo" placeholder="Search todo...">
                <input type="submit" value="Search">
            </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <table>
            <tr>
                <th>ID:</th>
                <th>Title:</th>
                <th>Description:</th>
                <th>Done:</th>
                <th>Urgent:</th>
                <th>Creation Date:</th>
                <th>Due Date:</th>
            </tr>
        
            @foreach (var todo in @Model.AllTodos)
            {
                <tr>
                    <td>@todo.Id</td>
                    <td>@todo.Title</td>
                    <td>@todo.Description</td>
                    <td>@todo.IsDone</td>
                    <td>@todo.IsUrgent</td>
                    <td>@todo.CreateDate</td>
                    <td>@todo.DueDate</td>
                    <td><a href="@todo.Id/delete">Delete</a></td>
                    <td><a href="@todo.Id/edit">Edit</a></td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="container">
    <div class="row">
        @Html.ActionLink("List of Assignees", "ListAll", "Assignee")
    </div>
</div>


@* <a href="assignee/assignees">List of Assignees</a> *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>