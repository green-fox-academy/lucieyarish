@model ListingTodos.Models.TodoViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todos</title>
</head>
<body>
<a href="add">Add new todo</a><br/>
<a href="active">View active todos only</a>
<h1>Todos for today:</h1>

<table>
    <tr>
        <th>ID:</th>
        <th>Title:</th>
        <th>Done:</th>
        <th>Urgent:</th>
    </tr>
    
        @foreach (var todo in @Model.AllTodos)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.IsDone</td>
                <td>@todo.IsUrgent</td>
                <td><a href="@todo.Id/delete">Delete</a></td>
            </tr>
        }
</table>
</body>
</html>